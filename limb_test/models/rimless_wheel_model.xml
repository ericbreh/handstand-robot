<mujoco>
  <option gravity="0 0 -9.81"/>

  <visual>
    <headlight diffuse="0.6 0.6 0.6"  ambient="0.3 0.3 0.3" specular="0 0 0"/>
    <rgba haze="0.15 0.25 0.35 1"/>
  </visual>

  <default>
    <geom friction="2.0 0.005 0.0001"/>
  </default>

  <worldbody>
    <geom type="plane" size="10 5 0.1" rgba=".9 .9 .9 1"/>

    <body pos="0 0 0.6" name="hub">
      <joint name="root_x" type="slide" axis="1 0 0" damping="0"/>
      <joint name="root_z" type="slide" axis="0 0 1" damping="0"/>
      <joint name="root_y" type="hinge" axis="0 1 0" damping="0"/>

      <geom type="cylinder" size="0.1 0.05" fromto="0 0.1 0 0 -0.1 0" rgba="1 1 1 1"/>

      <body pos="0 0 0" euler="0 0 0">
        <joint name="hinge1" type="hinge" axis="0 1 0" range="-90 90" limited="true" damping="0.1"/>
        <geom type="capsule" size="0.05" fromto="0 0 0 0 0 0.5" rgba="1 0 0 1"/>
      </body>

      <body pos="0 0 0" euler="0 90 0">
        <joint name="hinge2" type="hinge" axis="0 1 0" range="-90 90" limited="true" damping="0.1"/>
        <geom type="capsule" size="0.05" fromto="0 0 0 0 0 0.5" rgba="0 1 0 1"/>
      </body>

      <body pos="0 0 0" euler="0 180 0">
        <joint name="hinge3" type="hinge" axis="0 1 0" range="-90 90" limited="true" damping="0.1"/>
        <geom type="capsule" size="0.05" fromto="0 0 0 0 0 0.5" rgba="0 0 1 1"/>
      </body>

      <body pos="0 0 0" euler="0 270 0">
        <joint name="hinge4" type="hinge" axis="0 1 0" range="-90 90" limited="true" damping="0.1"/>
        <geom type="capsule" size="0.05" fromto="0 0 0 0 0 0.5" rgba="1 1 0 1"/>
      </body>
    </body>
  </worldbody>

  <actuator>
    <motor joint="hinge1" ctrlrange="-1 1" gear="200"/>
    <motor joint="hinge2" ctrlrange="-1 1" gear="200"/>
    <motor joint="hinge3" ctrlrange="-1 1" gear="200"/>
    <motor joint="hinge4" ctrlrange="-1 1" gear="200"/>
  </actuator>
</mujoco>