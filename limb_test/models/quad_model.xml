<mujoco>
  <option gravity="0 0 -9.81"/>
  <visual>
    <headlight diffuse="0.6 0.6 0.6"  ambient="0.3 0.3 0.3" specular="0 0 0"/>
    <rgba haze="0.15 0.25 0.35 1"/>
  </visual>

  <worldbody>
    <geom type="plane" size="5 5 0.1" rgba=".9 .9 .9 1"/>

    <body pos="0 0 0.5" name="hub">
      <joint name="hub_joint" type="hinge" axis="0 0 1" damping="0.1"/>
      <geom type="cylinder" size="0.1 0.05" rgba="1 1 1 1"/>

      <body pos="0.1 0 0" euler="0 0 0">
        <joint name="hinge1" type="hinge" axis="0 0 1" damping="0.1"/>
        <geom type="capsule" size="0.05" fromto="0 0 0 0.5 0 0" rgba="1 0 0 1"/>
      </body>

      <body pos="0 0.1 0" euler="0 0 90">
        <joint name="hinge2" type="hinge" axis="0 0 1" damping="0.1"/>
        <geom type="capsule" size="0.05" fromto="0 0 0 0.5 0 0" rgba="0 1 0 1"/>
      </body>

      <body pos="-0.1 0 0" euler="0 0 180">
        <joint name="hinge3" type="hinge" axis="0 0 1" damping="0.1"/>
        <geom type="capsule" size="0.05" fromto="0 0 0 0.5 0 0" rgba="0 0 1 1"/>
      </body>

      <body pos="0 -0.1 0" euler="0 0 270">
        <joint name="hinge4" type="hinge" axis="0 0 1" damping="0.1"/>
        <geom type="capsule" size="0.05" fromto="0 0 0 0.5 0 0" rgba="1 1 0 1"/>
      </body>
    </body>
  </worldbody>

  <actuator>
    <motor joint="hinge1" ctrlrange="-1 1" gear="50"/>
    <motor joint="hinge2" ctrlrange="-1 1" gear="50"/>
    <motor joint="hinge3" ctrlrange="-1 1" gear="50"/>
    <motor joint="hinge4" ctrlrange="-1 1" gear="50"/>
  </actuator>
</mujoco>